<section class="section">
  <div class="container">
    <h3>Upload documents</h3>
    <p>Choose a document type you want to upload and then browse for files. Files can be in PDF, JPEG or PNG format, up to 300 MiB in total.</p>

    <label class="label">Create documents after upload</label>
    <p class="control">
      {{#radio-button value=null groupValue=documentType class="radio" }}
        Do not create
      {{/radio-button}}
      {{#each joda.features as |feature|}}
        {{#radio-button value=feature.id groupValue=documentType class="radio" }}
          {{feature.title}}
        {{/radio-button}}
      {{/each}}
    </p>

    <label class="label">Files</label>
    <p class="control">{{file-upload action="uploadCompleted" errorMessage=errorMessage progress=progress documentType=documentType }}</p>
    <p>&nbsp;</p>

    {{#if errorMessage}}
      <progress class="progress is-danger" value="{{progress}}" max="100">{{progress}}%</progress>
    {{else}}
      <progress class="progress is-primary" value="{{progress}}" max="100">{{progress}}%</progress>
    {{/if}}

    {{#if errorMessage}}
      <div class="notification is-danger">
        {{errorMessage}}
      </div>
    {{/if}}
  </div>
</section>
