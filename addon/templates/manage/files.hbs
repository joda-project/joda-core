{{#section-content-list title=(t 'files.files')}}
  {{#filter-sidebar search=search sortTypes=sortTypes sortSelected=sortSelected reset=(action "resetFilters")}}
    <div class="panel-block">
      <p class="control has-icons-left">
        {{#single-select options=types selected=fileTypeItem placeholder=(t 'files.type') searchEnabled=false onchange=(action (mut fileTypeItem)) as |type| }}
          {{type.name}}
        {{/single-select}}
        <span class="icon is-left">{{fa-icon "file-o"}}</span>
      </p>
    </div>
  {{/filter-sidebar}}

  <div class="column">
    {{outlet}}
  </div>
{{/section-content-list}}
