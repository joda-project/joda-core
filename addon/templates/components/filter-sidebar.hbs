<nav class="panel">
  <p class="panel-heading">
    Filter &amp; Sort
  </p>
  <div class="panel-block">
    <p class="control has-icons-left">
      {{input class="input" type="text" placeholder="Search" value=search}}
      <span class="icon is-left">{{fa-icon "search"}}</span>
    </p>
  </div>

  {{yield}}

  <div class="panel-block">
    <p class="control has-icons-left">
      {{#single-select options=sortTypes selected=sortSelected placeholder="Sort" searchField="name" onchange=(action (mut sortSelected)) as |sort| }}
        {{sort.name}}
      {{/single-select}}
      <span class="icon is-left">{{fa-icon "sort"}}</span>
    </p>
  </div>

  <div class="panel-block">
    <button class="button is-primary is-outlined is-fullwidth is-small" {{action "reset"}}>
      Reset all
    </button>
  </div>
</nav>
