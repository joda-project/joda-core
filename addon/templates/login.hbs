{{#hero-fullpage loginPage=true}}
  <div class="box login">
    {{#link-to 'index' class="nav-item nav-title" title=joda.appName }}
      <span class="logo"></span>
    {{/link-to}}
    <form {{action 'authenticate' on='submit'}}>
      <div class="control">
        {{input id="identification" class="input is-medium" placeholder="User name" value=identification}}
      </div>
      <div class="control">
        {{input id="password" class="input is-medium" type="password" placeholder="Password" value=password}}
      </div>
      <button type="submit" class="button is-primary is-medium">Login</button>
    </form>

    {{#if errorMessage}}
      <div class="notification is-danger is-medium">
        {{errorMessage}}
      </div>
    {{/if}}
  </div>
{{/hero-fullpage}}
